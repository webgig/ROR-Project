<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= content_for?(:title) ? yield(:title) : "Myapp" %></title>
  <meta name="description" content="">
  <meta name="author" content="">
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>
<body>
<header class="navbar navbar-fixed-top">
  <div class="navbar">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-responsive-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="#">DealsIdeal</a>
        <div class="nav-collapse collapse navbar-responsive-collapse">
          <ul class="nav">
            <li class="active"><a href="/">Home</a></li>
            <li><a href="#">Deals</a></li>
            <li><a href="#">Blog</a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Items <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="#">Latest</a></li>
                <li><a href="#">Popular</a></li>
                <li><a href="#">Trending</a></li>
              </ul>
            </li>
          </ul>
          <form class="navbar-search pull-left" action="">
            <input type="text" class="search-query span2" placeholder="Search">
          </form>
          <ul class="nav pull-right">
            <li class="divider-vertical"></li>
            <li class="dropdown">

              <% if session[:current_user] %>
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" >Welcome, <%= session[:current_user].name %><b class="caret"></b></a>

                  <ul class="dropdown-menu">
                    <li><%= link_to 'My Items', '/myitems' %></li>
                    <li class="divider"></li>
                    <li><a href="#">Profile</a></li>
                    <li><%= link_to 'Signout', 'logout' %></li>
                  </ul>
             <% else %>
              <a type="button" class="" href="#login_modal" data-toggle="modal">Login</a>
             <% end %>
            </li>
          </ul>
        </div><!-- /.nav-collapse -->
      </div>
    </div><!-- /navbar-inner -->
  </div>
</header>
  <div class="container">
      <div class="row">

        <div class="span9">

          <!--Body content-->
            <%= yield %>


            <hr>
            <footer><p>Â© DealsIdeal 2012</p></footer>
        </div>
      </div>
  </div> <!--! end of .container -->
<% if !session[:current_user] %>
<%= render "index/login"%>
<% end %>
</body>
</html>