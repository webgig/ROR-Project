<h4>Sign Up!</h4>
<p id="notice"><%= notice %></p>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <fieldset>
  <div class="control-group">
    <%= f.label :name %><br>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email %>   
    <div class="controls">
     <%= f.text_field :email %>
    </div>
  </div>
  
  <div class="control-group">
            <!-- Button -->
    <div class="controls">    
      <%= submit_tag 'Sign Up' %> 
    </div>
  </div>
</fieldset>
<% end %>
